{
	"name": "mind-bloom",
	"version": "1.0.0",
	"main": "build/app.js",
	"scripts": {
		"test:db": "npx ts-node scripts/testDatabaseConnection.ts",
		"test:network": "npx ts-node scripts/networkTest.ts",
		"test:postgres": "npx ts-node scripts/postgresTest.ts",
		"start": "node build/app.js",
		"dev": "nodemon src/app.ts",
		"build": "npx prisma generate && tsc",
		"postbuild": "mkdir -p build/data && cp -r src/views src/public build/",
		"collect": "ts-node src/collect.ts",
		"analyze": "ts-node src/analyze.ts",
		"daily-quotes": "./bin/daily-quotes.sh",
		"clean": "rm -rf ./build",
		"watch": "nodemon src/app.ts",
		"test": "tsc --noEmit && vitest run",
		"prisma:generate": "prisma generate",
		"prisma:migrate:dev": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:seed": "npx ts-node prisma/seed.ts",
		"prisma:studio": "prisma studio",
		"migrate:to:supabase": "npx ts-node scripts/migrateToSupabase.ts",
		"docker:build": "docker build --platform linux/amd64 -t us-central1-docker.pkg.dev/softwareproject-454304/new-project/mind-bloom:latest .",
		"docker:run": "docker run -p 8080:8080 --env-file .env us-central1-docker.pkg.dev/softwareproject-454304/new-project/mind-bloom:latest",
		"gcloud:push": "docker push us-central1-docker.pkg.dev/softwareproject-454304/new-project/mind-bloom:latest",
		"gcloud:deploy": "gcloud run deploy mind-bloom --image us-central1-docker.pkg.dev/softwareproject-454304/new-project/mind-bloom:latest --platform managed --region us-central1 --allow-unauthenticated",
		"deploy": "npm run docker:build && npm run gcloud:push && npm run gcloud:deploy"
	},
	"author": "Meghan31",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@prisma/client": "^6.6.0",
		"axios": "^1.8.4",
		"bcrypt": "^5.1.1",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^4.21.2",
		"express-handlebars": "^8.0.1",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.13.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.11.11",
		"nodemon": "^3.1.9",
		"prisma": "^6.6.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.7"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
